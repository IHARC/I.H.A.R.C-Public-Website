---
export interface Props {
  title: string;
  description: string;
  background?: 'red' | 'blue' | 'green' | 'gray';
  size?: 'large' | 'medium' | 'small';
}

const { 
  title, 
  description, 
  background = 'red', 
  size = 'medium' 
} = Astro.props;

const backgroundClasses = {
  red: 'bg-gradient-to-br from-brand-red to-brand-redDark',
  blue: 'bg-gradient-to-br from-blue-600 to-blue-800',
  green: 'bg-gradient-to-br from-green-600 to-green-800',
  gray: 'bg-gradient-to-br from-gray-600 to-gray-800'
};

const sizeClasses = {
  large: 'py-20 lg:py-32',
  medium: 'py-16 lg:py-24', 
  small: 'py-12 lg:py-16'
};
---

<section class={`relative ${backgroundClasses[background]} text-white overflow-hidden`}>
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-5" aria-hidden="true">
    <div class="hero-pattern"></div>
  </div>

  <!-- Content -->
  <div class={`relative container ${sizeClasses[size]}`}>
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-bold mb-6 leading-tight">
        {title}
      </h1>
      
      <p class="text-lg lg:text-xl text-white/90 max-w-2xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>

<style>
  .hero-pattern {
    background-image: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                      radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    background-size: 60px 60px;
    background-position: 0 0, 30px 30px;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-pattern {
      animation: none;
    }
  }
</style>