---
// Analytics and tracking component
// Supports Google Analytics 4, Facebook Pixel, and other tracking services

export interface Props {
  // Skip analytics in development or when explicitly disabled
  disabled?: boolean;
}

const { disabled = false } = Astro.props;

// Get tracking IDs from environment variables
const GA4_ID = import.meta.env.PUBLIC_GA4_ID;
const FACEBOOK_PIXEL_ID = import.meta.env.PUBLIC_FACEBOOK_PIXEL_ID;
const HOTJAR_ID = import.meta.env.PUBLIC_HOTJAR_ID;
const GTM_ID = import.meta.env.PUBLIC_GTM_ID;

// Don't load analytics in development unless explicitly enabled
const isDev = import.meta.env.DEV;
const shouldLoad = !disabled && !isDev;

// Privacy-compliant tracking (respects Do Not Track)
const respectDNT = `
  // Respect Do Not Track setting
  if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
    console.log('Analytics disabled: Do Not Track is enabled');
    return;
  }
`;
---

{shouldLoad && (
  <Fragment>
    <!-- Google Analytics 4 -->
    {GA4_ID && (
      <Fragment>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA4_ID}`}></script>
        <script is:inline define:vars={{ GA4_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          
          // Check Do Not Track
          if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
            console.log('Google Analytics disabled: Do Not Track is enabled');
          } else {
            gtag('js', new Date());
            gtag('config', GA4_ID, {
              // Privacy-friendly settings
              anonymize_ip: true,
              respect_dnt: true,
              cookie_flags: 'SameSite=None;Secure'
            });
            
            console.log('Google Analytics 4 initialized');
          }
        </script>
      </Fragment>
    )}

    <!-- Google Tag Manager -->
    {GTM_ID && (
      <Fragment>
        <script is:inline define:vars={{ GTM_ID }}>
          // Check Do Not Track
          if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
            console.log('Google Tag Manager disabled: Do Not Track is enabled');
          } else {
            (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer', GTM_ID);
            
            console.log('Google Tag Manager initialized');
          }
        </script>
        <!-- GTM noscript fallback will be added to body by BaseLayout -->
      </Fragment>
    )}

    <!-- Facebook Pixel -->
    {FACEBOOK_PIXEL_ID && (
      <script is:inline define:vars={{ FACEBOOK_PIXEL_ID }}>
        // Check Do Not Track
        if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
          console.log('Facebook Pixel disabled: Do Not Track is enabled');
        } else {
          !function(f,b,e,v,n,t,s)
          {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
          n.callMethod.apply(n,arguments):n.queue.push(arguments)};
          if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
          n.queue=[];t=b.createElement(e);t.async=!0;
          t.src=v;s=b.getElementsByTagName(e)[0];
          s.parentNode.insertBefore(t,s)}(window, document,'script',
          'https://connect.facebook.net/en_US/fbevents.js');
          
          fbq('init', FACEBOOK_PIXEL_ID);
          fbq('track', 'PageView');
          
          console.log('Facebook Pixel initialized');
        }
      </script>
    )}

    <!-- Hotjar -->
    {HOTJAR_ID && (
      <script is:inline define:vars={{ HOTJAR_ID }}>
        // Check Do Not Track
        if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
          console.log('Hotjar disabled: Do Not Track is enabled');
        } else {
          (function(h,o,t,j,a,r){
            h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
            h._hjSettings={hjid:HOTJAR_ID,hjsv:6};
            a=o.getElementsByTagName('head')[0];
            r=o.createElement('script');r.async=1;
            r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
            a.appendChild(r);
          })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
          
          console.log('Hotjar initialized');
        }
      </script>
    )}

    <!-- Privacy-friendly event tracking helper -->
    <script is:inline>
      // Global event tracking function
      window.trackEvent = function(eventName, eventData = {}) {
        // Check Do Not Track
        if (navigator.doNotTrack === '1' || window.doNotTrack === '1') {
          console.log('Event tracking disabled: Do Not Track is enabled');
          return;
        }

        try {
          // Google Analytics 4
          if (typeof gtag !== 'undefined') {
            gtag('event', eventName, eventData);
          }

          // Facebook Pixel
          if (typeof fbq !== 'undefined') {
            fbq('track', eventName, eventData);
          }

          console.log('Event tracked:', eventName, eventData);
        } catch (error) {
          console.error('Error tracking event:', error);
        }
      };

      // Track common events automatically
      document.addEventListener('DOMContentLoaded', function() {
        // Track form submissions
        document.querySelectorAll('form').forEach(form => {
          form.addEventListener('submit', function(e) {
            const formId = this.id || 'unknown';
            window.trackEvent('form_submit', { form_id: formId });
          });
        });

        // Track external link clicks
        document.querySelectorAll('a[href^="http"]:not([href*="' + window.location.hostname + '"])').forEach(link => {
          link.addEventListener('click', function() {
            window.trackEvent('external_link_click', { 
              url: this.href,
              text: this.textContent.trim()
            });
          });
        });

        // Track phone number clicks
        document.querySelectorAll('a[href^="tel:"]').forEach(link => {
          link.addEventListener('click', function() {
            window.trackEvent('phone_click', { 
              number: this.href.replace('tel:', '')
            });
          });
        });

        // Track email clicks
        document.querySelectorAll('a[href^="mailto:"]').forEach(link => {
          link.addEventListener('click', function() {
            window.trackEvent('email_click', { 
              email: this.href.replace('mailto:', '')
            });
          });
        });
      });
    </script>

    <!-- Facebook Pixel noscript fallback -->
    {FACEBOOK_PIXEL_ID && (
      <noscript>
        <img 
          height="1" 
          width="1" 
          style="display:none"
          src={`https://www.facebook.com/tr?id=${FACEBOOK_PIXEL_ID}&ev=PageView&noscript=1`}
          alt=""
        />
      </noscript>
    )}
  </Fragment>
)}

{/* Development mode notice */}
{isDev && (
  <script is:inline>
    console.log('Analytics disabled in development mode');
    console.log('Available tracking IDs:', {
      GA4_ID: import.meta.env.PUBLIC_GA4_ID ? '✓ Set' : '✗ Not set',
      GTM_ID: import.meta.env.PUBLIC_GTM_ID ? '✓ Set' : '✗ Not set', 
      FACEBOOK_PIXEL_ID: import.meta.env.PUBLIC_FACEBOOK_PIXEL_ID ? '✓ Set' : '✗ Not set',
      HOTJAR_ID: import.meta.env.PUBLIC_HOTJAR_ID ? '✓ Set' : '✗ Not set'
    });
  </script>
)}

