---
import { programs } from '../data/site';

// Icon mapping for programs
const iconMap: Record<string, string> = {
  users: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z',
  heart: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  zap: 'M13 10V3L4 14h7v7l9-11h-7z',
  'shield-check': 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  lightbulb: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  'book-open': 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
};
---

<section class="py-16 bg-surface">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-heading font-bold text-on-surface mb-4">
        Programs & Services
      </h2>
      <p class="text-lg text-on-surface-variant max-w-3xl mx-auto">
        Comprehensive support across multiple areas of community need, from crisis intervention to long-term recovery and safety initiatives.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {programs.map((program, index) => {
        const isClickable = program.href;
        const Component = isClickable ? 'a' : 'div';
        
        return (
          <Component
            {...(isClickable && { 
              href: program.href, 
              'aria-label': `Learn more about ${program.title} - ${program.description}` 
            })}
            class={`group card transition-all duration-250 ease-out border-t-4 border-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 ${
              isClickable ? 'hover:shadow-md hover:-translate-y-1 cursor-pointer' : ''
            }`}
            data-fade-in
            data-delay={index * 100}
          >
            <div class="flex items-start space-x-4">
              <!-- Icon -->
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center group-hover:bg-primary group-hover:text-on-primary transition-all duration-250">
                <svg class="w-6 h-6 text-primary group-hover:text-on-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconMap[program.icon] || iconMap.users} />
                </svg>
              </div>

              <!-- Content -->
              <div class="flex-1 min-w-0">
                <h3 class="text-xl font-heading font-semibold text-on-surface mb-2 group-hover:text-primary transition-colors">
                  {program.title}
                </h3>
                <p class="text-on-surface-variant leading-relaxed max-w-prose">
                  {program.description}
                </p>

                {isClickable && (
                  <div class="mt-4 flex items-center text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-250">
                    <span class="text-sm font-medium mr-2">Learn more</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-250" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                )}
              </div>
            </div>
          </Component>
        );
      })}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="/programs" class="btn-primary">
        View All Programs
      </a>
    </div>
  </div>
</section>