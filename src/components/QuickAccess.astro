---
import { quickAccess } from '../data/site';

// Simple icon mapping - in a real project, you might use a proper icon library
const iconMap: Record<string, string> = {
  phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  'alert-triangle': 'M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z',
  bike: 'M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 4a1 1 0 000 2h3l1.4 2.8A1 1 0 0112.6 8.2L11.33 6H15a1 1 0 100-2H7zM6.293 9.293a1 1 0 011.414 0L9 10.586l1.293-1.293a1 1 0 111.414 1.414L10.414 12l1.293 1.293a1 1 0 01-1.414 1.414L9 13.414l-1.293 1.293a1 1 0 01-1.414-1.414L7.586 12 6.293 10.707a1 1 0 010-1.414z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
};
---

<section class="py-16 bg-gray-50">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-4">
        Quick Access
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Get immediate help or report community concerns. Available 24/7 for urgent situations.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-6">
      {quickAccess.map((item, index) => (
        <a
          href={item.href}
          class={`group card card-hover block transition-all duration-250 ease-out hover:scale-101 hover:shadow-red-glow focus:outline-none focus:ring-2 focus:ring-brand-red focus:ring-offset-2 ${
            item.urgent ? 'ring-2 ring-brand-red ring-opacity-50' : ''
          }`}
          data-fade-in
          data-delay={index * 100}
          aria-label={`${item.title} - ${item.description}`}
        >
          <div class="text-center">
            <!-- Icon -->
            <div class={`mx-auto w-12 h-12 mb-4 rounded-full flex items-center justify-center transition-all duration-250 ${
              item.urgent 
                ? 'bg-brand-red text-white group-hover:bg-brand-redDark' 
                : 'bg-brand-red bg-opacity-10 text-brand-red group-hover:bg-brand-red group-hover:text-white'
            }`}>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d={iconMap[item.icon] || iconMap.phone} clip-rule="evenodd" />
              </svg>
            </div>

            <!-- Content -->
            <h3 class="text-lg font-heading font-semibold text-gray-900 mb-2 group-hover:text-brand-red transition-colors">
              {item.title}
              {item.urgent && (
                <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-brand-red text-white">
                  Urgent
                </span>
              )}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {item.description}
            </p>
          </div>

          <!-- Hover indicator -->
          <div class="mt-4 flex items-center justify-center text-brand-red opacity-0 group-hover:opacity-100 transition-opacity duration-250">
            <span class="text-sm font-medium mr-2">Access now</span>
            <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-250" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- Emergency notice -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center px-4 py-2 bg-brand-red text-white rounded-full text-sm font-medium" role="note" aria-label="Emergency information">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d={iconMap.phone} clip-rule="evenodd" />
        </svg>
        Emergency? Call 911 immediately
      </div>
    </div>
  </div>
</section>