---
export interface Props {
  type?: 'red-line' | 'angled' | 'subtle';
}

const { type = 'subtle' } = Astro.props;
---

{type === 'red-line' && (
  <div class="bg-white py-4" aria-hidden="true">
    <div class="container">
      <div class="h-0.5 bg-gradient-to-r from-transparent via-brand-red to-transparent max-w-2xl mx-auto opacity-30"></div>
    </div>
  </div>
)}

{type === 'angled' && (
  <div class="relative h-16 bg-gray-50 overflow-hidden" aria-hidden="true">
    <div class="absolute inset-0">
      <svg class="absolute h-full w-full" preserveAspectRatio="none" viewBox="0 0 100 16" fill="none">
        <polygon points="0,16 100,0 100,16" fill="white"/>
      </svg>
    </div>
  </div>
)}

{type === 'subtle' && (
  <div class="bg-gradient-to-b from-transparent to-gray-50/50 h-8" aria-hidden="true"></div>
)}