---
import BaseLayout from '../layouts/BaseLayout.astro';
import Logo from '../components/Logo.astro';

const contactInfo = {
  phone: '(905) 555-HELP',
  email: 'info@iharc.ca',
  emergency: '911',
  crisis: '1-866-996-0991' // Crisis hotline placeholder
};

const socialLinks = [
  { name: 'Facebook', href: 'https://facebook.com/iharc', icon: 'facebook' },
  { name: 'Twitter', href: 'https://twitter.com/iharc', icon: 'twitter' },
  { name: 'LinkedIn', href: 'https://linkedin.com/company/iharc', icon: 'linkedin' },
];
---

<BaseLayout 
  title="Coming Soon - IHARC" 
  description="IHARC website is launching soon. For immediate assistance, call (905) 555-HELP or 911 for emergencies."
  noindex={true}
>
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center px-4 py-8">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Logo -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-brand-red rounded-full mb-6">
          <Logo size="lg" variant="white" />
        </div>
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-gray-900 mb-4">
          IHARC
        </h1>
        <p class="text-xl text-gray-600 font-medium">
          Integrated Homelessness & Addictions Response Centre
        </p>
      </div>

      <!-- Coming Soon Message -->
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12 mb-8">
        <div class="mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-heading font-bold text-gray-900 mb-4">
            Website Coming Soon
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            We're building something special for our community. Our new website will make it easier than ever to access vital services and support.
          </p>
        </div>

        <!-- Launch Timeline -->
        <div class="bg-gray-50 rounded-lg p-6 mb-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Expected Launch</h3>
          <p class="text-gray-700">
            <span class="font-medium text-brand-red">Early 2024</span> - Stay tuned for updates
          </p>
        </div>

        <!-- Emergency Contact -->
        <div class="border-t border-gray-200 pt-8">
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L5.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-semibold text-red-900 mb-2">
                  Need Help Right Now?
                </h3>
                <div class="space-y-2 text-red-800">
                  <p class="flex items-center">
                    <span class="font-medium mr-2">Emergency:</span>
                    <a href="tel:911" class="font-bold text-red-900 hover:underline focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 rounded">
                      911
                    </a>
                  </p>
                  <p class="flex items-center">
                    <span class="font-medium mr-2">Crisis Support:</span>
                    <a href="tel:18669960991" class="font-bold text-red-900 hover:underline focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 rounded">
                      1-866-996-0991
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="text-center">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact IHARC</h3>
            <div class="space-y-3">
              <p class="flex items-center justify-center text-gray-700">
                <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${contactInfo.phone.replace(/[^\d]/g, '')}`} class="font-medium hover:text-brand-red focus:outline-none focus:ring-2 focus:ring-brand-red focus:ring-offset-2 rounded">
                  {contactInfo.phone}
                </a>
              </p>
              <p class="flex items-center justify-center text-gray-700">
                <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a href={`mailto:${contactInfo.email}`} class="font-medium hover:text-brand-red focus:outline-none focus:ring-2 focus:ring-brand-red focus:ring-offset-2 rounded">
                  {contactInfo.email}
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Links -->
      <div class="text-center">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Stay Connected</h3>
        <div class="flex justify-center space-x-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-12 h-12 bg-white rounded-full shadow-md text-gray-600 hover:text-brand-red hover:shadow-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-brand-red focus:ring-offset-2"
              aria-label={`Follow IHARC on ${link.name}`}
            >
              {link.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Footer Note -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-500">
          Serving Northumberland County, Ontario with integrated homelessness and addictions response services.
        </p>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Ensure smooth animations respect user preferences */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
  
  /* Add subtle animations for enhanced UX */
  @media (prefers-reduced-motion: no-preference) {
    .bg-white {
      transition: all 0.3s ease;
    }
    
    .bg-white:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
  }
</style>