---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SectionDivider from '../../components/SectionDivider.astro';

export async function getStaticPaths() {
  const newsArticles = await getCollection('news', ({ data }) => {
    return !data.draft;
  });
  
  return newsArticles.map((article) => ({
    params: { slug: article.slug },
    props: article,
  }));
}

type Props = Awaited<ReturnType<typeof getCollection<'news'>>>[number];

const article = Astro.props;
const { Content } = await article.render();

// Function to format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-CA', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Function to get reading time estimate
const getReadingTime = (content: string) => {
  const wordsPerMinute = 200;
  const wordCount = content.split(/\s+/).length;
  const readingTime = Math.ceil(wordCount / wordsPerMinute);
  return readingTime;
};
---

<BaseLayout 
  title={`${article.data.title} - IHARC News`}
  description={article.data.excerpt}
>
  <Header />
  
  <main id="main" class="flex-1">
    <!-- Article Header -->
    <section class="py-16 bg-gradient-to-br from-gray-50 to-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <!-- Breadcrumb -->
          <nav class="flex items-center text-sm text-gray-500 mb-8" aria-label="Breadcrumb">
            <a href="/" class="hover:text-brand-red transition-colors">Home</a>
            <svg class="w-5 h-5 mx-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <a href="/news" class="hover:text-brand-red transition-colors">News</a>
            <svg class="w-5 h-5 mx-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 truncate">{article.data.title}</span>
          </nav>

          <!-- Article metadata -->
          <div class="flex items-center text-sm text-gray-500 mb-6">
            <div class="flex items-center mr-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time datetime={article.data.date.toISOString()}>
                {formatDate(article.data.date)}
              </time>
            </div>
            
            <div class="flex items-center mr-6">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{getReadingTime(article.body)} min read</span>
            </div>

            {article.data.author && (
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
                <span>By {article.data.author}</span>
              </div>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-bold text-gray-900 leading-tight mb-6">
            {article.data.title}
          </h1>

          <!-- Excerpt -->
          <p class="text-xl text-gray-600 leading-relaxed">
            {article.data.excerpt}
          </p>
        </div>
      </div>
    </section>

    <SectionDivider type="subtle" />

    <!-- Article Content -->
    <article class="py-16 bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg max-w-none">
            <Content />
          </div>
        </div>
      </div>
    </article>

    <!-- Tags -->
    {article.data.tags && article.data.tags.length > 0 && (
      <section class="py-8 bg-gray-50 border-t border-gray-200">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <div class="flex items-center flex-wrap gap-3">
              <span class="text-sm font-medium text-gray-700">Tags:</span>
              {article.data.tags.map((tag: string) => (
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-brand-red/10 text-brand-red capitalize">
                  {tag}
                </span>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}

    <SectionDivider type="subtle" />

    <!-- Navigation & CTA -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Back to News -->
            <div class="bg-gray-50 rounded-2xl p-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">More Updates</h3>
              <p class="text-gray-600 mb-6">
                Stay up to date with all of IHARC's latest news, program updates, and community impact stories.
              </p>
              <a 
                href="/news" 
                class="inline-flex items-center text-brand-red font-medium hover:text-brand-redDark transition-colors"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                View All News
              </a>
            </div>

            <!-- Contact CTA -->
            <div class="bg-brand-red/5 border border-brand-red/20 rounded-2xl p-8">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Get Involved</h3>
              <p class="text-gray-600 mb-6">
                Interested in supporting our work or learning more about our programs? We'd love to hear from you.
              </p>
              <div class="flex flex-col sm:flex-row gap-3">
                <a href="/contact" class="btn-primary text-center">
                  Contact Us
                </a>
                <a href="/get-involved" class="btn-secondary text-center">
                  Get Involved
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .prose {
    color: #374151;
    max-width: none;
  }
  
  .prose h2 {
    color: #111827;
    font-weight: 700;
    font-size: 1.875rem;
    line-height: 2.25rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    color: #111827;
    font-weight: 600;
    font-size: 1.5rem;
    line-height: 2rem;
    margin-top: 1.75rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  .prose ul {
    margin: 1.25rem 0;
    padding-left: 1.625rem;
    list-style-type: disc;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose strong {
    color: #111827;
    font-weight: 600;
  }
  
  .prose em {
    font-style: italic;
    color: #6B7280;
  }
  
  .prose a {
    color: #CE2029;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #B91C1C;
    text-decoration: none;
  }
  
  .prose blockquote {
    border-left: 4px solid #CE2029;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6B7280;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .prose a {
      transition: none;
    }
  }
</style>