---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHero from '../components/PageHero.astro';
import SectionDivider from '../components/SectionDivider.astro';
---

<BaseLayout 
  title="Get Involved - IHARC" 
  description="Join IHARC's mission to support community members across Northumberland County through volunteering, donations, partnerships, and advocacy."
>
  <Header />
  
  <main id="main" class="flex-1">
    <PageHero 
      title="Get Involved"
      description="Your support makes our work possible. Discover meaningful ways to contribute to building stronger, safer communities across Northumberland County."
      background="red"
      size="medium"
    />

    <!-- Ways to Help Overview -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
              Ways to Make a Difference
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Whether you have time, resources, or expertise to share, there's a meaningful way for you to contribute to our community's wellbeing.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Volunteer -->
            <div class="text-center group cursor-pointer" onclick="scrollToSection('volunteer')">
              <div class="w-20 h-20 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-brand-red group-hover:text-white transition-all duration-300 transform group-hover:scale-105">
                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-brand-red transition-colors">Volunteer</h3>
              <p class="text-gray-600">Share your time and skills to directly support community members</p>
            </div>

            <!-- Donate -->
            <div class="text-center group cursor-pointer" onclick="scrollToSection('donate')">
              <div class="w-20 h-20 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-brand-red group-hover:text-white transition-all duration-300 transform group-hover:scale-105">
                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-brand-red transition-colors">Donate</h3>
              <p class="text-gray-600">Contribute financially to sustain and expand our programs</p>
            </div>

            <!-- Partner -->
            <div class="text-center group cursor-pointer" onclick="scrollToSection('partner')">
              <div class="w-20 h-20 bg-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-brand-red group-hover:text-white transition-all duration-300 transform group-hover:scale-105">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-brand-red transition-colors">Partner</h3>
              <p class="text-gray-600">Collaborate with us as an organization or business</p>
            </div>

            <!-- Advocate -->
            <div class="text-center group cursor-pointer" onclick="scrollToSection('advocate')">
              <div class="w-20 h-20 bg-yellow-100 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-brand-red group-hover:text-white transition-all duration-300 transform group-hover:scale-105">
                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-brand-red transition-colors">Advocate</h3>
              <p class="text-gray-600">Help raise awareness and promote policy changes</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider type="subtle" />

    <!-- Volunteer Opportunities -->
    <section id="volunteer" class="py-16 bg-gray-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
              Volunteer Opportunities
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Join our team of dedicated volunteers making a direct impact in the lives of community members across Northumberland County.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
            <!-- Direct Service Volunteers -->
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900">Direct Service</h3>
              </div>
              
              <ul class="space-y-4 text-gray-600 mb-8">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Street Outreach:</strong> Support mobile outreach teams connecting with community members</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Meal Programs:</strong> Help prepare and serve meals at shelter and community sites</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Support Groups:</strong> Facilitate peer support and recovery programs</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Transportation:</strong> Provide rides to appointments and services</span>
                </li>
              </ul>
              
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p class="text-sm text-blue-800">
                  <strong>Requirements:</strong> Background check, orientation training, and commitment to trauma-informed practices.
                </p>
              </div>
            </div>

            <!-- Administrative & Specialized -->
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V4a2 2 0 00-2-2H6zm1 2a1 1 0 000 2h6a1 1 0 100-2H7zm6 7a1 1 0 011 1v3a1 1 0 11-2 0v-3a1 1 0 011-1zm-3 3a1 1 0 100 2h.01a1 1 0 100-2H10zm-4 1a1 1 0 011-1h.01a1 1 0 110 2H7a1 1 0 01-1-1zm1-4a1 1 0 100 2h.01a1 1 0 100-2H7zm2 0a1 1 0 100 2h.01a1 1 0 100-2H9zm2 0a1 1 0 100 2h.01a1 1 0 100-2H11z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900">Administrative & Specialized</h3>
              </div>
              
              <ul class="space-y-4 text-gray-600 mb-8">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Data Entry:</strong> Help maintain client records and program statistics</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Event Support:</strong> Assist with community events and fundraising activities</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Professional Skills:</strong> Legal, accounting, marketing, or other professional expertise</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Board Service:</strong> Join our board of directors or advisory committees</span>
                </li>
              </ul>
              
              <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                <p class="text-sm text-green-800">
                  <strong>Flexible scheduling:</strong> Many opportunities available evenings and weekends to accommodate different schedules.
                </p>
              </div>
            </div>
          </div>

          <div class="text-center">
            <a href="/contact?subject=Volunteer%20Interest" class="btn-primary inline-flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Apply to Volunteer
            </a>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider type="subtle" />

    <!-- Donate Section -->
    <section id="donate" class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
              Support Our Work
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Your financial contributions directly support programs that make a life-changing difference for the most vulnerable members of our community.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
            <!-- Monthly Giving -->
            <div class="bg-gradient-to-br from-brand-red to-brand-redDark text-white rounded-2xl p-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                  </svg>
                </div>
                <h3 class="text-2xl font-bold mb-4">Monthly Giving</h3>
                <p class="text-white/90 mb-6">
                  Provide consistent support that allows us to plan and sustain our programs year-round.
                </p>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between">
                    <span>$25/month</span>
                    <span>Emergency supplies for 10 people</span>
                  </div>
                  <div class="flex justify-between">
                    <span>$50/month</span>
                    <span>One outreach visit weekly</span>
                  </div>
                  <div class="flex justify-between">
                    <span>$100/month</span>
                    <span>Crisis intervention training</span>
                  </div>
                </div>
                <a href="#" class="btn-white mt-6">
                  Start Monthly Giving
                </a>
              </div>
            </div>

            <!-- One-Time Donation -->
            <div class="bg-white border border-gray-200 rounded-2xl p-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900 mb-4">One-Time Gift</h3>
                <p class="text-gray-600 mb-6">
                  Make a one-time contribution to support immediate needs and program expansion.
                </p>
                <div class="space-y-3 text-sm text-gray-600">
                  <div class="flex justify-between">
                    <span>$50</span>
                    <span>Emergency shelter for one night</span>
                  </div>
                  <div class="flex justify-between">
                    <span>$150</span>
                    <span>Health supplies for 50 people</span>
                  </div>
                  <div class="flex justify-between">
                    <span>$500</span>
                    <span>Mobile outreach for one week</span>
                  </div>
                </div>
                <a href="#" class="btn-primary mt-6">
                  Donate Now
                </a>
              </div>
            </div>

            <!-- In-Kind Donations -->
            <div class="bg-white border border-gray-200 rounded-2xl p-8">
              <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900 mb-4">In-Kind Donations</h3>
                <p class="text-gray-600 mb-6">
                  Donate goods and services that directly support our clients and operations.
                </p>
                <ul class="text-left text-sm text-gray-600 space-y-2 mb-6">
                  <li>• Winter clothing and blankets</li>
                  <li>• Non-perishable food items</li>
                  <li>• Personal hygiene products</li>
                  <li>• Office supplies and equipment</li>
                  <li>• Professional services</li>
                </ul>
                <a href="/contact?subject=In-Kind%20Donation" class="btn-secondary">
                  Donate Items
                </a>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-2xl p-8 text-center">
            <h3 class="text-2xl font-semibold text-gray-900 mb-4">Tax Receipts Available</h3>
            <p class="text-gray-600 max-w-2xl mx-auto">
              IHARC is a registered charity. All donations over $20 receive a tax receipt for income tax purposes. <strong>Charity Registration Number: 123456789RR0001</strong>
            </p>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider type="subtle" />

    <!-- Partnership -->
    <section id="partner" class="py-16 bg-gray-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
              Partnership Opportunities
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Collaborate with IHARC to amplify impact and create systemic change in addressing homelessness, mental health, and community safety.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Business Partnerships -->
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900">Business Partnerships</h3>
              </div>

              <ul class="space-y-4 text-gray-600 mb-8">
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Corporate Sponsorship:</strong> Support specific programs or events with financial contributions</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Employee Volunteer Programs:</strong> Organize team volunteer opportunities for staff</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>Employment Partnerships:</strong> Create job opportunities for program participants</span>
                </li>
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-brand-red mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span><strong>In-Kind Services:</strong> Provide goods, services, or expertise at reduced or no cost</span>
                </li>
              </ul>

              <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
                <p class="text-sm text-purple-800">
                  <strong>Benefits:</strong> Corporate social responsibility recognition, team building opportunities, and community impact visibility.
                </p>
              </div>
            </div>

            <!-- Community & Government Partnerships -->
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mr-4">
