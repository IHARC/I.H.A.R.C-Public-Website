---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageHero from '../components/PageHero.astro';
import SectionDivider from '../components/SectionDivider.astro';
import { footer } from '../data/site';
---

<BaseLayout 
  title="Contact Us - IHARC" 
  description="Get in touch with IHARC for support, information, or to learn more about our services across Northumberland County."
>
  <Header />
  
  <main id="main" class="flex-1">
    <PageHero 
      title="Contact Us"
      description="We're here to help. Reach out anytime for support, information, or questions about our services."
      background="red"
      size="medium"
    />

    <!-- Emergency Notice -->
    <section class="py-8 bg-yellow-50 border-b border-yellow-200">
      <div class="container">
        <div class="flex items-center justify-center">
          <div class="flex items-center px-6 py-3 bg-yellow-100 rounded-lg border-l-4 border-yellow-500">
            <svg class="w-6 h-6 text-yellow-600 mr-3" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-semibold text-yellow-800">Need immediate help?</p>
              <p class="text-yellow-700">For crisis support, <a href="/get-help" class="underline hover:no-underline">visit our Get Help page</a> or call 911 for emergencies.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Methods -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
              Get in Touch
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Choose the method that works best for you. We're committed to responding promptly and connecting you with the right support.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="space-y-8">
              <!-- Phone -->
              <div class="bg-gray-50 rounded-2xl p-8">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-brand-red rounded-xl flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900">Phone</h3>
                </div>
                <div class="ml-16">
                  <p class="text-2xl font-bold text-brand-red mb-2">
                    <a href={`tel:${footer.contact.phone}`} class="hover:underline">{footer.contact.phone}</a>
                  </p>
                  <p class="text-gray-600 text-sm">Monday - Friday, 8:30 AM - 4:30 PM</p>
                  <p class="text-gray-500 text-sm mt-1">For after-hours crisis support, visit our <a href="/get-help" class="text-brand-red hover:underline">Get Help page</a></p>
                </div>
              </div>

              <!-- Email -->
              <div class="bg-gray-50 rounded-2xl p-8">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900">Email</h3>
                </div>
                <div class="ml-16">
                  <p class="text-xl font-semibold text-blue-600 mb-2">
                    <a href={`mailto:${footer.contact.email}`} class="hover:underline">{footer.contact.email}</a>
                  </p>
                  <p class="text-gray-600 text-sm">We aim to respond within 1 business day</p>
                </div>
              </div>

              <!-- Location -->
              <div class="bg-gray-50 rounded-2xl p-8">
                <div class="flex items-center mb-4">
                  <div class="w-12 h-12 bg-green-600 rounded-xl flex items-center justify-center mr-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900">Office Location</h3>
                </div>
                <div class="ml-16">
                  <div class="text-gray-900 mb-2">
                    {footer.contact.address.map((line, index) => (
                      <p class={index === 0 ? 'font-semibold' : ''}>{line}</p>
                    ))}
                  </div>
                  <p class="text-gray-600 text-sm">Monday - Friday, 8:30 AM - 4:30 PM</p>
                  <p class="text-gray-500 text-sm mt-2">
                    Please call ahead to ensure someone is available to meet with you.
                  </p>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white border border-gray-200 rounded-2xl p-8">
              <h3 class="text-2xl font-semibold text-gray-900 mb-6">Send us a message</h3>
              
              <form class="space-y-6" action="#" method="POST">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                      First Name *
                    </label>
                    <input 
                      type="text" 
                      id="firstName" 
                      name="firstName" 
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors"
                    />
                  </div>
                  
                  <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                      Last Name *
                    </label>
                    <input 
                      type="text" 
                      id="lastName" 
                      name="lastName" 
                      required
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors"
                    />
                  </div>
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email Address *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors"
                  />
                </div>

                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Phone Number
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors"
                  />
                </div>

                <div>
                  <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                    How can we help? *
                  </label>
                  <select 
                    id="subject" 
                    name="subject" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors"
                  >
                    <option value="">Please select...</option>
                    <option value="general">General Information</option>
                    <option value="services">Questions About Services</option>
                    <option value="volunteer">Volunteer Opportunities</option>
                    <option value="partnership">Partnership Inquiry</option>
                    <option value="media">Media Request</option>
                    <option value="feedback">Feedback or Complaint</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                    Message *
                  </label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="5" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-red focus:border-brand-red transition-colors resize-y"
                    placeholder="Please provide details about your inquiry..."
                  ></textarea>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <p class="text-sm text-gray-600 mb-3">
                    <strong>Privacy Notice:</strong> We respect your privacy and will only use your information to respond to your inquiry. We do not share your personal information with third parties.
                  </p>
                  <label class="flex items-start">
                    <input type="checkbox" required class="mt-1 mr-3 h-4 w-4 text-brand-red focus:ring-brand-red border-gray-300 rounded" />
                    <span class="text-sm text-gray-600">
                      I consent to IHARC collecting and using my personal information for the purpose of responding to this inquiry. *
                    </span>
                  </label>
                </div>

                <button 
                  type="submit" 
                  class="w-full btn-primary"
                >
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider type="subtle" />

    <!-- Office Hours & Accessibility -->
    <section class="py-16 bg-gray-50">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Office Hours -->
            <div class="bg-white rounded-2xl p-8 border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900">Office Hours</h3>
              </div>
              
              <div class="space-y-4">
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Monday - Friday</span>
                  <span class="font-semibold text-gray-900">8:30 AM - 4:30 PM</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                  <span class="text-gray-600">Saturday - Sunday</span>
                  <span class="text-gray-500">Closed</span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="text-gray-600">Statutory Holidays</span>
                  <span class="text-gray-500">Closed</span>
                </div>
              </div>

              <div class="mt-6 p-4 bg-red-50 rounded-lg border border-red-200">
                <p class="text-sm text-red-800">
                  <strong>After Hours:</strong> For crisis support outside office hours, visit our <a href="/get-help" class="underline hover:no-underline">Get Help page</a> for 24/7 resources.
                </p>
              </div>
            </div>

            <!-- Accessibility -->
            <div class="bg-white rounded-2xl p-8 border border-gray-100">
              <div class="flex items-center mb-6">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <h3 class="text-2xl font-semibold text-gray-900">Accessibility</h3>
              </div>
              
              <div class="space-y-4 text-gray-600">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Wheelchair accessible entrance and facilities</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Language interpretation services available</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Large print materials and alternative formats</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Assistive listening devices</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Service animal friendly</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-green-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Flexible meeting arrangements</span>
                </div>
              </div>

              <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
                <p class="text-sm text-blue-800">
                  <strong>Need accommodations?</strong> Please let us know when you contact us, and we'll work to ensure you can access our services comfortably.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <SectionDivider type="red-line" />

    <!-- Staff Directory Preview -->
    <section class="py-16 bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-heading font-bold text-gray-900 mb-6">
            Our Team
          </h2>
          <p class="text-xl text-gray-600 mb-8">
            IHARC is staffed by dedicated professionals committed to serving our community with compassion, expertise, and respect.
          </p>
          
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="flex items-center justify-center mb-4">
              <div class="w-16 h-16 bg-brand-red/10 rounded-2xl flex items-center justify-center">
                <svg class="w-8 h-8 text-brand-red" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              Experienced, Caring Professionals
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Our multidisciplinary team includes social workers, mental health professionals, outreach workers, and community support specialists. All staff receive ongoing training in trauma-informed care, de-escalation, and cultural competency.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<script>
// Basic form validation and enhancement
document.addEventListener('DOMContentLoaded', () => {
  const form = document.querySelector('form');
  if (form) {
    form.addEventListener('submit', (e) => {
      // This would typically integrate with a backend service
      e.preventDefault();
      alert('Thank you for your message. We will respond within 1 business day.');
    });
  }
});
</script>